class Solution {
public:
    string toLowerCase(string str) {
        for(int i=0;i<str.size();i++)
        {
            //Either one of the below line can be used as a solution of the question
            //str[i]= tolower(str[i]); //Using tolower() function
            str[i] = (str[i] >= 'A' && str[i] <= 'Z') ? str[i] + 32 : str[i]; //Using ASCII values
        }
        return str;
    }
};
